def get_yes_no_input(prompt="Do you want to exit the application? (ys/no): "):
    while True:
        user_input = input(prompt).strip().lower()
        if user_input in ['yes', 'y']:
            return True
        elif user_input in ['no', 'n']:
            return False
        else:
            print("Please enter 'yes' or 'no'.")

# Main program
if get_yes_no_input():
    print("You selected yesxiting the application.")
    sys.exit()

# Continue the application if user said no
print("You selected no. ntinuing the application...")
